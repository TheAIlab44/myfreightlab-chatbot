historySidebar.style.transition = 'left 0.3s ease';
historySidebar.style.padding = '20px';
historySidebar.style.zIndex = '999';
historySidebar.innerHTML = `
  <h2 style="margin-top: 0;">Historique</h2>
  <p>Aucun historique pour le moment.</p>
`;

document.body.appendChild(historySidebar);

// Fonction d'ouverture/fermeture
let historyOpen = false;
historyButton.addEventListener('click', () => {
  historyOpen = !historyOpen;
  historySidebar.style.left = historyOpen ? '0' : '-300px';
});
